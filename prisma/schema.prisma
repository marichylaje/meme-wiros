generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  nombreColegio String
  nombreCurso   String
  email         String   @unique
  password      String
  cantidad      Int
  anioEgreso    Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  design Design? @relation("UserDesign")
}

model Design {
  id           String @id @default(cuid())
  templateName String
  layerColors  String
  customText   String
  textColor    String
  textPosition String
  fontFamily   String

  // Relaci√≥n 1:1 con User
  colegioId String @unique
  colegio   User   @relation("UserDesign", fields: [colegioId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
