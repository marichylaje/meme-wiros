generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(cuid())
  email          String   @unique
  password       String
  nombreColegio  String
  nombreCurso    String
  cantidad       Int
  anioEgreso     Int
  design         Design?  @relation(fields: [designId], references: [id])
  designId       String?  @unique
}

model Design {
  id            String   @id @default(cuid())
  templateName  String
  layerColors   String
  customText    String
  textColor     String
  textPosition  String
  fontFamily    String

  user          User?    @relation
}
